<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4" />

    <!-- Scene label -->
    <TextView
        android:id="@+id/tvScene"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ¤– NeuralGram AI Camera"
        android:textColor="#00E5FF"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="6dp"
        android:paddingBottom="2dp"/>

    <!-- Button row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“· Capture"
            android:backgroundTint="#1976D2"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â­ Favourite"
            android:backgroundTint="#F57F17"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“Š Stats"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ—‘ Clear"
            android:backgroundTint="#C62828"
            android:textColor="#FFFFFF"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <!-- Learning strength slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§  Learning:"
            android:textColor="#CCCCCC"
            android:textSize="12sp"/>

        <SeekBar
            android:id="@+id/seekLearning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:max="100"
            android:progress="75"/>
    </LinearLayout>

    <!-- Stats panel -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#111111">

        <TextView
            android:id="@+id/tvStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap ðŸ“Š Stats to see your AI profile"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:padding="12dp"/>
    </ScrollView>

</LinearLayout>
